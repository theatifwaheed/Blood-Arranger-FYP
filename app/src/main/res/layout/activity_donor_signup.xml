<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#Be5025"
    tools:context=".DonorSignup">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        android:elevation="10dp"
        android:background="#fff">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"

                android:src="@drawable/bloodlogo"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DONOR/RECEIVER REGISTRATION"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="REGISTER TO CONTINUE"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">

                <!--                <de.hdodenhof.circleimageview.CircleImageView-->
                <!--                    android:id="@+id/profile_image"-->
                <!--                    android:layout_width="110dp"-->
                <!--                    android:layout_height="110dp"-->
                <!--                    android:layout_gravity="center"-->
                <!--                    android:src="@drawable/profile"-->
                <!--                    app:civ_border_width="2dp"-->
                <!--                    app:civ_border_color="#FF000000"/>-->

                <EditText
                    android:id="@+id/name_d_Reg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/person"
                    android:drawablePadding="10dp"
                    android:hint="Enter Full Name"
                    android:textColor="#000"
                    android:textColorHint="#000"
                    android:textSize="18sp"
                    tools:ignore="TouchTargetSizeCheck" />

                <EditText
                    android:id="@+id/email_d_Reg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_baseline_email_24"
                    android:drawablePadding="10dp"
                    android:hint="Enter Email Address"
                    android:textColor="#000"
                    android:inputType="textEmailAddress"
                    android:textColorHint="#000"
                    android:textSize="18sp"
                    tools:ignore="TouchTargetSizeCheck"/>

                <EditText
                    android:id="@+id/username_d_RG"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/person"
                    android:drawablePadding="10dp"
                    android:hint="Enter Username"
                    android:textColor="#000"
                    android:textColorHint="#000"
                    android:textSize="18sp"
                    tools:ignore="TouchTargetSizeCheck"/>

                <EditText
                    android:id="@+id/password_d_Reg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_baseline_vpn_key_24"
                    android:drawablePadding="10dp"
                    android:hint="Enter Password"
                    android:inputType="textPassword"
                    android:textColor="#000"
                    android:textColorHint="#000"
                    android:textSize="18sp"
                    tools:ignore="TouchTargetSizeCheck">

                </EditText>

                <EditText
                    android:id="@+id/phone_d_Reg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_baseline_phone_24"
                    android:drawablePadding="10dp"
                    android:hint="Enter Phone Number"
                    android:textColor="#000"
                    android:inputType="number"
                    android:textColorHint="#000"
                    android:textSize="18sp"
                    tools:ignore="TouchTargetSizeCheck">

                </EditText>


                <Spinner
                    android:id="@+id/BGS_RD"
                    android:layout_width="325dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="25dp"
                    android:background="#fff"
                    android:entries="@array/bloodgroups"
                    android:minHeight="48dp">

                </Spinner>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Register Me"
                    android:id="@+id/Reg_d_Reg"
                    android:background="@drawable/buttons_background"
                    android:textColor="#fff"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/signIn_d_Reg"
                    android:text="Already registered? Sign In"
                    android:layout_marginTop="15dp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:gravity="center"/>


            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</ScrollView>