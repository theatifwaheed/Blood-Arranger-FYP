            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:ems="10"-->
            <!--                android:inputType="textPersonName"-->
            <!--                android:text="Longitude"-->
            <!--                tools:layout_editor_absoluteY="160dp" />-->

            <!--            <EditText-->
            <!--                android:layout_marginTop="20dp"-->
